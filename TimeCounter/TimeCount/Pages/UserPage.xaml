<UserControl x:Class="TimeCount.Pages.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid Height="472" Width="671">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="425*"/>

        </Grid.RowDefinitions>


        <Label x:Name="UserNameLbl" FontFamily="comic sans ms" Content="Silviutzu" Foreground="CadetBlue"  FontSize="30" VerticalAlignment="Top" Height="64" Grid.Row="0" Grid.RowSpan="2" />

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top"  Grid.Row="1" Height="42" Width="75">
            <Button Style="{StaticResource NavigationBtn}" Content="Home Page" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="21"/>
            <Button x:Name="SignOutBtn" Style="{StaticResource NavigationBtn}" HorizontalContentAlignment="Right" Content="Sign out" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="21" Click="SignOutBtn_Click"/>
        </StackPanel>

    </Grid>

</UserControl>
